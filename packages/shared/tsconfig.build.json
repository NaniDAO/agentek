  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "NodeNext",     
    "moduleResolution": "NodeNext",  
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
