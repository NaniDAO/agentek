{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["**/*.test.ts", "node_modules", "dist"]
}